{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "vite-plugin-pages/client"],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "types",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./src", "packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue", "shims-vue.d.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
